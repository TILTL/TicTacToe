<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="CENTER" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17" fx:controller="TicTacToeController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
    <children>
        <Label fx:id="statusLabel" text="Player X's turn" GridPane.columnSpan="3" />
        <Button fx:id="btn00" minWidth="80" minHeight="80" onAction="#handleButtonClick" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <Button fx:id="btn01" minWidth="80" minHeight="80" onAction="#handleButtonClick" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Button fx:id="btn02" minWidth="80" minHeight="80" onAction="#handleButtonClick" GridPane.columnIndex="2" GridPane.rowIndex="1" />
        <Button fx:id="btn10" minWidth="80" minHeight="80" onAction="#handleButtonClick" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <Button fx:id="btn11" minWidth="80" minHeight="80" onAction="#handleButtonClick" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Button fx:id="btn12" minWidth="80" minHeight="80" onAction="#handleButtonClick" GridPane.columnIndex="2" GridPane.rowIndex="2" />
        <Button fx:id="btn20" minWidth="80" minHeight="80" onAction="#handleButtonClick" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <Button fx:id="btn21" minWidth="80" minHeight="80" onAction="#handleButtonClick" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        <Button fx:id="btn22" minWidth="80" minHeight="80" onAction="#handleButtonClick" GridPane.columnIndex="2" GridPane.rowIndex="3" />
    </children>
</GridPane>
